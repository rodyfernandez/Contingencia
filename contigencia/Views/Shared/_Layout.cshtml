<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Contingencia APP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>

    <script src="https://rawgithub.com/buberdds/angular-bootstrap-colorpicker/master/js/bootstrap-colorpicker-module.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <link href="~/Content/colorpicker.css" rel="stylesheet" />

    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Contingencia APP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Simulacion", "Simulation", "planescontingencias")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administracion <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">

                            <li>@Html.ActionLink("Niveles de Riesgo", "Index", "NivelesRiesgo")</li>
                            <li>@Html.ActionLink("Condiciones de Escenarios", "Index", "condiciones")</li>
                            <li>@Html.ActionLink("Escenarios", "Index", "escenarios")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Instrucciones", "Index", "instrucciones")</li>
                            <li>@Html.ActionLink("Destinatarios", "Index", "destinatarios")</li>
                            <li>@Html.ActionLink("Personas", "Index", "personas")</li>
                            <li>@Html.ActionLink("Planes de Contigencia", "Index", "planescontingencias")</li>                                                        

                        </ul>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Plan de Contingencia</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    

    @*<script src="/Content/bootstrap-colorpicker-module.js"></script>*@


    @RenderSection("scripts", required: false)

    


</body>
</html>
