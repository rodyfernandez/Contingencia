@model contigencia.Models.ViewModels.PlanInstruccionesViewModel

@{
    ViewBag.Title = "Agregar Instrucciones";
}

<h2>Agregar Instrucciones</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Plan De Contingencias - Instrucciones</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.plan.id)

        <div class="form-group">
            @Html.LabelFor(model => model.plan.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.plan.descripcion, new { htmlAttributes = new { @class = "form-control"  }  })
                @Html.ValidationMessageFor(model => model.plan.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
                       
        <div class="form-group">
            @Html.LabelFor(model=>model.allInstructions,"Escenarios",new {@class="control-label col-md-2"})
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.SelectedInstructions, Model.allInstructions, new { @style = "width: 400px; height: 130px;" })
            </div>
        </div>        
   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
