@model contigencia.Models.ViewModels.EscenarioCondicionesViewModel

@{
    ViewBag.Title = "Agregar Condiciones";
}

<h2>Agregar Condiciones</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>escenario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.escenary.id)
    

        <div class="form-group">
            @Html.LabelFor(model => model.escenary.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.escenary.nombre, new { htmlAttributes = new { @class = "form-control", disabled="disabled"  }  })
                @Html.ValidationMessageFor(model => model.escenary.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
                       
        <div class="form-group">
            @Html.LabelFor(model=>model.AllConditions,"Condiciones",new {@class="control-label col-md-2"})
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.SelectedConditions , Model.AllConditions)
            </div>
        </div>        
   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
