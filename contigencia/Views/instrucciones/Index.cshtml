@model IEnumerable<contigencia.Models.Instruccion>

@{
    ViewBag.Title = "Inicio";
}

<h2>Instrucciones</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instructivo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @if (item.Instructivo != null && item.Instructivo.ToArray().Count() > 0)
            {
                @Html.Partial("_ShowFile", item)
            }
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @*@Html.ActionLink("Detalles", "Details", new { id=item.id }) |*@
            @Html.ActionLink("Borrar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
